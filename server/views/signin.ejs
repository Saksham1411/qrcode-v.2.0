<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignIn</title>
    <script src="https://cdn.tailwindcss.com"></script>

  </head>
  <body class="bg-gray-700 text-white">
    <h1 class="text-3xl font-bold bg-gray-800 p-4 font-serif">SignIn</h1>

    <div class="my-8 flex flex-col justify-center items-center w-screen gap-4">
        <% if (locals.msg) { %>
          <p class="bg-red-900 font-bold text-md p-3 rounded-lg"><%= msg %></p>
        <% } %>
      <form action="/signIn" method="post" class="flex flex-col gap-2">
        <label for="fullName">Full Name</label>
        <input type="text" name="fullName" id="fullName" class="rounded text-black px-2"/>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="rounded text-black px-2"/>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="rounded text-black px-2"/>
        <button type="submit" class="border border-gray-900 rounded w-1/2 px-2 py-1 bg-gray-900 my-1 hover:bg-gray-800">Sign In</button>

      </form>
    </div>
  </body>
</html>