<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignIn</title>
    <script src="https://cdn.tailwindcss.com"></script>

  </head>
  <body class="bg-gray-700 text-white">
    <h1 class="text-3xl font-bold bg-gray-800 p-4 font-serif">Create new Event</h1>

    <div class="my-8 flex flex-col justify-center items-center w-screen gap-4">
        <% if (locals.code) { %>
          <p class="bg-green-900 text-white font-bold text-md p-3 rounded-lg">Remember this code to get further access <%= code %></p>
        <% } %>
        <% if (locals.msg) { %>
          <p class="bg-red-900 text-white font-bold text-md p-3 rounded-lg"><%= msg %></p>
        <% } %>
      <form action="/addEvent" method="post" class="flex flex-col gap-2">
        <label for="fullName">Full Name</label>
        <input type="text" name="name" id="fullName" class="rounded text-black px-2"/>
        <label for="date">date</label>
        <input type="date" name="date" id="date" class="rounded text-black px-2"/>
        <label for="time">time</label>
        <input type="text" name="time" id="time" class="rounded text-black px-2"/>
        <label for="address">address</label>
        <input type="text" name="address" id="address" class="rounded text-black px-2"/>
        
        <button type="submit" class="border border-gray-900 rounded px-2 py-1 bg-gray-900 my-1 hover:bg-gray-800">Create Event</button>

      </form>
    </div>
  </body>
</html>